<% title 'Cambiar contraseña de administrador' %>
<div class="row">
  <div class="page-header">
    <h1>Cambiar contraseña</h1>
  </div>
  <div class="col-xs-12 col-sm-10 col-md-8 center-block">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, as: :hidden %>
          <%= f.input :password, autocomplete: 'off',
                      hint: 'Déjela en blanco si no la va a cambiar',
                      required: false, label: 'Nueva contraseña' %>
          <%= f.input :password_confirmation, required: false, label: 'Confirmación de contraseña' %>
          <%= f.input :current_password, hint: 'Debe ingresar su contraseña actual para guardar los cambios',
                      required: true, label: 'Contraseña actual' %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, 'Guardar', class: 'btn-primary' %>
        </div>
    <% end %>
  </div>
</div>
