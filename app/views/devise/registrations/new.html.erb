<div class="col-xs-12 col-md-6 center-block" style="float: none;">
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="glyphicon glyphicon-lock" aria-hidden="true"></span> Registrarse en el sistema.
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name, required: true, autofocus: true, label: 'Nombre' %>
            <%= f.input :lastname, required: true, label: 'Apellido(s)' %>
            <%= f.input :email, required: true, label: 'Correo electrónico' %>
            <%= f.input :password, required: true, label: 'Contraseña', hint: ("#{@minimum_password_length} carácteres mínimo" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true, label: 'Confirme contraseña' %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, 'Registrarse', class: 'btn btn-primary btn-block' %>
          </div>
      <% end %>
    </div>
    <div class="panel-footer clearfix">
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
