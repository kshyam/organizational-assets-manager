<div class="col-xs-12 col-md-6 center-block" style="float: none;">
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="glyphicon glyphicon-lock" aria-hidden="true"></span> Ingrese al sistema para continuar.
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Ingresar", class: 'btn-success btn-block' %>
          </div>
      <% end %>
    </div>
    <div class="panel-footer clearfix">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
