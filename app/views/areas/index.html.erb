<div class="row">
  <div class="page-header">
    <div class="pull-right">
      <div class="form-inline">
        <%= link_to new_area_path, class: 'btn btn-primary btn-sm' do %>
            <%= fa_icon 'plus' %> Nueva área
        <% end %>
        <input class="form-control input-sm" placeholder="Buscar área" id="area-list-search">
      </div>
    </div>
    <h1>Áreas del recinto</h1>
  </div>

  <div class="col-md-12" id="area-list">
    <% if @areas.empty? %>
        <div class="text-center">
          <p>No existen areas registradas, puede crear un nueva <%= link_to "aquí", new_area_path %></p>
        </div>
    <% end %>

    <!-- ul for searching with list js -->
    <ul class="list-unstyled list">
      <% @areas.each do |area| %>
        <li>
          <div class="col-md-3 col-equal">
            <div class="panel panel-default panel-equal">
              <div class="panel-body">
                <%= link_to area_path(area) do %>
                    <h4 class="name"><%= area.name.capitalize %></h4>
                <% end %>
                <p><%= truncate(area.description, length: 30, separator: "...") %></p>

                <%= fa_icon "cubes fw", text: area.assets.size, title: "Activos" %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
