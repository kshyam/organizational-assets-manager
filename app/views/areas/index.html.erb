<div class="row">
 <div class="page-header">
  <div class="col-md-2 pull-right">
    <input class="form-control input-sm" placeholder="Buscar area" id="area-list-search">
  </div>
  <h1>Areas del recinto <small><%= @areas.count %></small></h1>
 </div>

 <div class="col-md-12" id="area-list">
  <% if @areas.empty? %>
    <div class="text-center">
      <p>No existen areas registradas, puede crear un nueva <%= link_to "aqui", new_area_path %></p>
    </div>
  <% end %>

  <!-- ul for searching with list js -->
  <ul class="list-unstyled list">
    <% @areas.each do |area| %>
      <li>
        <div class="col-md-3 col-equal">
         <div class="panel panel-default panel-equal">
           <div class="panel-body">
            <%= link_to area_path(area) do %>
              <h4 class="name"><%= area.name.capitalize %></h4>
            <% end %>
            <p><%= truncate(area.description, length: 30, separator: "...") %></p>

            <%= fa_icon "cubes fw", text: area.assets.size, title: "Activos" %>
           </div>
         </div>
        </div>
      </li>
    <% end %>
   </ul>
 </div>
</div>
