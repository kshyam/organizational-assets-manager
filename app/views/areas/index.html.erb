<div class="row">
 <div class="page-header">
   <%= link_to new_area_path, class: "btn btn-primary btn-xs pull-right" do %>
    <%= fa_icon "plus", text: "Nueva area" %>
   <% end %>
   <h1>Areas del recinto</h1>
 </div>

 <div class="col-md-12">
  <% if @areas.empty? %>
    <div class="text-center">
      <p>No existen areas registradas, puede crear un nueva <%= link_to "aqui", new_area_path %></p>
    </div>
  <% end %>

   <% @areas.each do |area| %>
    <div class="col-md-3 col-equal">
     <div class="panel panel-default panel-equal">
       <div class="panel-body">
        <%= link_to area_path(area) do %>
          <h4><%= area.name.capitalize %></h4>
        <% end %>
        <p><%= truncate(area.description, length: 30, separator: "...") %></p>

        <%= fa_icon "cubes", text: area.assets.count, title: "Activos" %>
       </div>
     </div>
    </div>
   <% end %>
 </div>
</div>
