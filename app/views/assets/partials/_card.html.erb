<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-xs-12">
      <div class="col-xs-12 col-sm-3 col-md-2">
        <i class="fa fa-desktop fa-5x"></i>
      </div>
      <div class="col-xs-12 col-sm-9 col-md-10">
        <div class="row">
          <div class="col-xs-12">
            <h4><%= link_to asset.description, asset_path(asset.id) %></h4>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 text-small">
            <ul class="list-inline">
              <li>
                <i class="fa fa-shield"></i>
                <strong>Placa:</strong> <%= asset.plate_number ? asset.plate_number : 'Sin placa' %>
              </li>
              <li>
                <i class="fa fa-barcode"></i>
                <strong>Serie:</strong> <%= asset.serial_number ? asset.serial_number : 'Sin serie' %>
              </li>
              <li>
                <i class="fa fa-sticky-note"></i>
                <strong>Estado:</strong> <%= asset.status_to_h %>
              </li>
              <li>
                <i class="fa fa-folder-o"></i>
                <strong>Categor√≠a:</strong> <%= asset.category.name %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>