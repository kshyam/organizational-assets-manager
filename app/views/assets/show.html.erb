<div class="row">
  <div class="page-header">
    <h1><%= @asset.description %></h1>
  </div>
  <div class="col-xs-12 col-sm-9 asset-details">
    <%= render 'assets/show_partials/details' %>
  </div>
  <div class="col-xs-12 col-sm-3 sidebar">
    <div class="row">
      <div class="col-xs-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <strong><%= @asset.category.name %></strong>
            <p class="text-center">
              <%= image_tag @asset.photo.url(:thumb), class: 'img-thumbnail' %>
            </p>
            <hr>
            <strong>Código</strong>
            <hr>
            <strong>Área:</strong> <%= @asset.area.name %>
            <p class="text-center">
              <%= image_tag @asset.area.photo.url(:thumb), class: 'img-thumbnail' %>
              <p class="text-center">
                <%= link_to 'Ver área', area_path(@asset.area) %> |
                <%= link_to 'Cambiar ubicación', '#' %>
              </p>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'assets/show_partials/modals' %>
</div>
